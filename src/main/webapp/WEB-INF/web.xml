<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <description>ATM System</description>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

    <!-- 登录页面的映射 -->
    <servlet>
        <servlet-name>loginJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginJsp</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 主界面的映射 -->
    <servlet>
        <servlet-name>selectJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/select.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectJsp</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>

    <!-- 存款界面的映射 -->
    <servlet>
        <servlet-name>depositConfirmJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/deposit/depositConfirm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>depositConfirmJsp</servlet-name>
        <url-pattern>/depositConfirm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>depositEndJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/deposit/depositEnd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>depositEndJsp</servlet-name>
        <url-pattern>/depositEnd</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>depositFailJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/deposit/depositFail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>depositFailJsp</servlet-name>
        <url-pattern>/depositFail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>depositInputJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/deposit/depositInput.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>depositInputJsp</servlet-name>
        <url-pattern>/depositInput</url-pattern>
    </servlet-mapping>

    <!-- 转账界面的映射 -->
    <servlet>
        <servlet-name>transferInputJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/transfer/transferInput.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>transferInputJsp</servlet-name>
        <url-pattern>/transferInput</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>transferFailJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/transfer/transferFail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>transferFailJsp</servlet-name>
        <url-pattern>/transferFail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>transferEndJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/transfer/transferEnd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>transferEndJsp</servlet-name>
        <url-pattern>/transferEnd</url-pattern>
    </servlet-mapping>

    <!-- 取款界面的映射 -->
    <servlet>
        <servlet-name>withdrawInputJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/withdraw/withdrawInput.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdrawInputJsp</servlet-name>
        <url-pattern>/withdrawInput</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>withdrawEndJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/withdraw/withdrawEnd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdrawEndJsp</servlet-name>
        <url-pattern>/withdrawEnd</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>withdrawFailJsp</servlet-name>
        <jsp-file>/WEB-INF/pages/withdraw/withdrawFail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdrawFailJsp</servlet-name>
        <url-pattern>/withdrawFail</url-pattern>
    </servlet-mapping>

</web-app>